    "compilerOptions": {
       "target": "es5",
       "module": "commonjs",
       "jsx": "react",
       "outDir": "./dist",
       "rootDir": "./src",
       "strict": true,
       "esModuleInterop": true,
       "skipLibCheck": true,
       "forceConsistentCasingInFileNames": true,
       "plugins": [{ "name": "typescript-plugin-css-modules" }],
       "lib": [
            "es2018",
            "dom"
        ]   
     }
 }